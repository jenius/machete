#!/usr/bin/env node

require('coffee-script');
var Machete = require('../lib'),
    path = require('path'),
    ncp = require('ncp').ncp,
    colors = require('colors'),
    argv = require('optimist').argv;

switch(argv._[0]){
  case 'new':
    ncp(path.resolve('./templates/new'), path.join(process.cwd(), argv._[1]), function(err){
      if (err) return console.error(err);
      console.log('template created'.green);
    });
    break;
  case 'deploy':
    console.log('deploying...'); break;
  default:
    generate(path.resolve(argv._[0]) || process.cwd())
}

function generate(dir){
  var machete = new Machete(dir);
  machete.generate();
}
