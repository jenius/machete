:stylus

  html, body
    width: 100%
    height: 100%
    margin: 0
    padding: 0

  body
    background: #333
    color: #444
    font-family: Lato, sans-serif
    -webkit-font-smoothing: antialiased

  .slide
    background: #fff
    width: 80%
    height: 80%
    position: absolute
    top: 0
    bottom: 0
    left: 0
    right: 0
    margin: auto
    padding: 5%
    -webkit-box-sizing: border-box
    -moz-box-sizing: border-box
    -o-box-sizing: border-box
    box-sizing: border-box

    h1
      text-align: center
      font-size: 3.5em
      margin: .5em 0

    h2
      text-align: center
      font-weight: 300

    h3
      font-size: 2em
      margin: 0 0 .5em 0
      border-bottom: 1px solid #ccc
      padding-bottom: 7px
