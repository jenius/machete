@import 'axis'

font-size = 16

normalize()
base()

html, body
  width: 100%
  height: 100%
  margin: 0
  padding: 0

body
  color: #444
  font-family: Lato, sans-serif
  background: radial-gradient(lighten(primary, 10%), darken(primary, 20%))

#controls
  display: none if !controls

  @media only screen and (max-width: 500px)
    display: none

  & > div
    color: white
    fs: 3em
    position: absolute
    top: 48%
    opacity: .15
    transition()
    cursor: pointer
    background: #000
    size: 50px
    rounded()
    line-height: 80%
    text-align: center

    &:hover
      opacity: .5

  .left
    left: 5%
    padding: 1px 1px 0 0

  .right
    right: 5%
    padding: 1px 0 2px 3px

#slides

  div
    position: fixed
    margin: auto
    top: 0
    bottom: 0
    left: 0
    right: 0
    color: #fff
    display: table
    width: 65%
    max-width: 750px

    &.pinned
      height: 80%

  //
  // transition types
  //

  &.none div
    &.future, &.past
      display: none

  &.slide.loaded div
    transition: left .5s ease

  h1
    text-align: center
    font-size: 3.1em
    margin: .5em 0

  h2
    text-align: center
    font-weight: 500
    font-size: 1.3em

  h3
    font-size: 2em
    margin: 0 0 1em 0
    border-bottom: 1px solid rgba(#fff,.4)
    padding-bottom: .5em
    text-align: center
    font-weight: 500

  p, li
    font-size: 1.2em
    line-height: 1.5em

  a
    text-decoration: none
    color: secondary
    transition()
    hover-underline()

  code
    padding: 15px
    line-height: 1.3em

