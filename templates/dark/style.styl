html, body
  width: 100%
  height: 100%
  margin: 0
  padding: 0
  font-size: 103.36% // 16px
  -webkit-text-size-adjust: 100%
  -ms-text-size-adjust: 100%
  font-size-adjust:auto

body
  color: #444
  font-family: Lato, sans-serif
  -webkit-font-smoothing: antialiased
  background: #353535
  background: -moz-radial-gradient(center, ellipse cover,  #353535 0%, #191919 100%)
  background: -webkit-gradient(radial, center center, 0px, center center, 100%, color-stop(0%,#353535), color-stop(100%,#191919))
  background: -webkit-radial-gradient(center, ellipse cover,  #353535 0%,#191919 100%)
  background: -o-radial-gradient(center, ellipse cover,  #353535 0%,#191919 100%)
  background: -ms-radial-gradient(center, ellipse cover,  #353535 0%,#191919 100%)
  background: radial-gradient(ellipse at center,  #353535 0%,#191919 100%)

#slides

  div
    position: fixed
    margin: auto
    top: 0
    bottom: 0
    left: 0
    right: 0
    color: #fff
    display: table
    width: 65%
    max-width: 750px

    &.pinned
      height: 80%

  //
  // transition types
  //

  &.none div
    &.future, &.past
      display: none

  // this still needs work
  &.fade div
    transition: opacity .5s ease, all 1s ease
    &.future, &.past
      opacity: 0

  &.slide.loaded div
    transition: left .5s ease

  h1
    text-align: center
    font-size: 3.3em
    margin: .5em 0

  h2
    text-align: center
    font-weight: 500
    font-size: 1.3em

  h3
    font-size: 2em
    margin: 0 0 1em 0
    border-bottom: 1px solid rgba(#fff,.4)
    padding-bottom: .5em
    text-align: center
    font-weight: 500

  p, li
    font-size: 1.2em
    line-height: 1.5em

  a
    text-decoration: none
    color: #f0b963
    border-bottom: 1px solid transparent
    transition: all .3s ease
    padding-bottom: 2px

    &:hover
      border-bottom: 1px solid #f0b963

